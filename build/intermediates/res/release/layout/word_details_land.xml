<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/london"
    >
       <RelativeLayout
      android:id="@+id/wordBasics"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:paddingTop="25dp"
	  android:paddingLeft="10dp">
			<ImageView
	        android:id="@+id/audioBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="27dp"
	        android:layout_marginRight="50dp"
	        android:background="@drawable/audio_button"
	        />
		   <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="0dp"
		    android:layout_marginLeft="10dp"
		    android:orientation="vertical">
			   <TextView 
				android:id="@+id/foreignWord"
				android:layout_width="245dp"
			    android:layout_height="wrap_content"
				android:text="foreign"
			    android:textColor="@+drawable/buttonColor"
				android:textSize="16sp"
				android:maxWidth="245dp"
				android:padding="2dp"
			    />
			   <TextView 
			    android:id="@+id/transcription"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="transcription"
			    android:textSize="16sp"
			    android:textColor="#6699FF"
			    android:background="#F5F9FA"
			    android:padding="2dp"
			   />
			   <TextView 
				android:id="@+id/nativeWord"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="native"
				android:textColor="#333333"
				android:textSize="16sp"
				android:maxWidth="270dp"
				android:padding="2dp"
			   />
		</LinearLayout>  
		<ImageView
		android:id="@+id/wordImage"
		android:layout_width="wrap_content"
		android:layout_height="150dp"
		android:layout_marginTop="85dp"
		android:layout_centerHorizontal="true"
		android:maxWidth="240dp"
		android:maxHeight="150dp"
		android:adjustViewBounds="true"
		android:src="@drawable/vocabulary"
		android:visibility="gone"
		/>
	</RelativeLayout>
	<ListView 
	    android:id="@+id/sentencesListView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"
	    android:background="#AAFFFFFF"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_marginTop="8dp"
	/>
	<TextView 
	    android:id="@+id/noSentencesLabel"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:text="There aren't any sentences..."
	    android:background="#AAFFFFFF"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_marginTop="8dp"
    />

</LinearLayout>

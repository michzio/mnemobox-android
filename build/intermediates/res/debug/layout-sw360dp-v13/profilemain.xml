<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/bigben"
>
<RelativeLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >
   <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@+drawable/blank"
        />
     <TextView 
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="35dp"
            android:text="@string/name"
            android:textSize="16sp"
            android:textColor="@+drawable/buttonColor"
    />
   <TextView 
            android:id="@+id/emailText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultemail"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="120dp"
            android:textColor="#333333"
            android:textSize="14sp"
    />    
</RelativeLayout>
<RelativeLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00FFFFFF"
    >

<TableLayout 
android:id="@+id/ProfileMainActivityTable"
android:layout_centerHorizontal="true"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_marginTop="50dp"
>
<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
 <Button
        android:id="@+id/profileInfoBtn"
        android:contentDescription="@string/profileinfo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/buttonColor"
        android:layout_margin="5dp"
        android:text="@string/profileinfo"
        android:textColor="#FFFFFF"
        android:onClick="launchProfileInfo"
  />
 <Button
        android:id="@+id/learningStatsBtn"
        android:contentDescription="@string/statistics"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/buttonColor"
        android:layout_margin="5dp"
        android:text="@string/statistics"
         android:textColor="#FFFFFF"
         android:onClick="launchStats"
        />
 </TableRow>
 <TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 <Button
        android:id="@+id/historyBtn"
        android:contentDescription="@string/history"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/buttonColor"
        android:layout_margin="5dp"
        android:text="@string/history"
         android:textColor="#FFFFFF"
         android:onClick="launchHistory"
        />
  
  <Button
        android:id="@+id/moneyBtn"
        android:contentDescription="@string/money"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/buttonColor" 
        android:layout_margin="5dp"
        android:text="@string/money"
        android:textColor="#FFFFFF"
        android:onClick="launchMoney"
        />
  </TableRow>
</TableLayout>
</RelativeLayout>
</LinearLayout>

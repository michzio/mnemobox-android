<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/london"
     android:id="@+id/mainSwipeLayout"
    >

<TableLayout 
android:id="@+id/MainActivityTable"
android:layout_centerHorizontal="true"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_marginTop="10dp"
>
<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
 <Button
        android:id="@+id/vocabularyBtn"
        android:contentDescription="@string/vocabulary"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/vocabulary"
        android:layout_margin="5dp"
        android:text="@string/vocabulary"
         android:textColor="#FFFFFF"
         android:gravity="bottom|center_horizontal"
  />
 <Button
        android:id="@+id/dictBtn"
        android:contentDescription="@string/dictionary"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/dictionary"
        android:layout_margin="5dp"
        android:text="@string/dictionary"
         android:textColor="#FFFFFF"
         android:gravity="bottom|center_horizontal"
        />
  <Button
        android:id="@+id/learnedBtn"
        android:contentDescription="@string/learned"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/learned"
        android:layout_margin="5dp"
        android:text="@string/learned"
         android:textColor="#FFFFFF"
         android:gravity="bottom|center_horizontal"
        />
 </TableRow>
 <TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
  
  <Button
        android:id="@+id/profileBtn"
        android:contentDescription="@string/profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/profile" 
        android:layout_margin="5dp"
         android:text="@string/profile"
          android:textColor="#FFFFFF"
          android:gravity="bottom|center_horizontal"
        />
  <Button
        android:id="@+id/forgottenBtn"
        android:contentDescription="@string/forgotten_words"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@+drawable/forgotten"
        android:layout_margin="5dp"
        android:text="@string/forgotten"
         android:textColor="#FFFFFF"
         android:gravity="bottom|center_horizontal"
        />
  
  <Button
        android:id="@+id/toRememberBtn"
        android:contentDescription="@string/words_to_remember"
        android:layout_width="130dp"
        android:layout_height="130dp"
       android:background="@+drawable/mywords" 
        android:layout_margin="5dp"
        android:text="@string/mywords"
        android:textColor="#FFFFFF"
        android:gravity="bottom|center_horizontal"
        />
  </TableRow>
</TableLayout>
</RelativeLayout>


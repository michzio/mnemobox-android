<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="@drawable/london">
<LinearLayout 
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="wrap_content">
    <Button 
    android:layout_marginTop="30dp"
    android:id="@+id/signupWithFacebookBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/signup_with_fb"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:textColor="#FFFFFF"
    android:background="@+drawable/facebook_button"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    />
    <TextView
       android:id="@+id/sign_up_header_text"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:text="@string/or_fill_sign_up_form"
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:layout_marginTop="30dp"
	   android:layout_marginBottom="25dp"
	   android:textColor="#2a2929"
	   android:gravity="center"
   />
	 <TextView
	       android:id="@+id/sign_up_first_name_text"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/first_name"
		   android:layout_marginLeft="100dp"
		   android:layout_marginRight="100dp"
		   android:textColor="#2a2929"
		   android:gravity="right"
		   />
	<EditText
	   android:id="@+id/first_name"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:inputType="text"
	   android:text=""
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:gravity="right|center_vertical"
	   />
   <TextView
       android:id="@+id/sign_up_last_name_text"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:text="@string/last_name"
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:textColor="#2a2929"
	   android:gravity="right"
	   />
	<EditText 
	   android:id="@+id/last_name"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:inputType="text"
	   android:text=""
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:gravity="right|center_vertical"
	   />
	<TextView
	   android:id="@+id/sign_up_email_text" 
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:text="@string/login_email"
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:textColor="#2a2929"
	   android:gravity="right"
	   />
	<EditText 
	   android:id="@+id/email_address"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:inputType="textEmailAddress"
	   android:text=""
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:gravity="right|center_vertical"
	   />
	<TextView
	   android:id="@+id/sign_up_password_text"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:text="@string/password"
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:textColor="#2a2929"
	   android:gravity="right"
	   />
	<EditText 
	   android:id="@+id/password_input"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:inputType="textPassword"
	   android:text=""
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:gravity="right|center_vertical"
	   />
   <TextView
       android:id="@+id/sign_up_password2_text"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:text="@string/confirm_password"
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:textColor="#2a2929"
	   android:gravity="right"
	   />
	<EditText 
	   android:id="@+id/password_input2"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:inputType="textPassword"
	   android:text=""
	   android:layout_marginLeft="100dp"
	   android:layout_marginRight="100dp"
	   android:gravity="right|center_vertical"
	   />
 <Button 
    android:id="@+id/signupBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/signup"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:textColor="#FFFFFF"
    android:background="@+drawable/rounded_button"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="20dp"
   />
</LinearLayout>
</ScrollView>
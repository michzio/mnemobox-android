<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/london">
<ScrollView
    android:id="@+id/profileinfoScrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:visibility="gone"
    >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <!-- HEADER -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#00000000"
	    android:layout_margin="30dp"> 
	   <ImageView
	        android:id="@+id/userPhoto"
	        android:contentDescription="@string/user_photo"
	        android:layout_width="90dp"
	        android:layout_height="90dp"
	        android:background="@+drawable/blank"
	        />
	   <TextView 
	            android:id="@+id/nameText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/userPhoto"
	            android:layout_marginLeft="30dp"
	            android:layout_marginTop="15dp"
	            android:text="@string/name"
	            android:textSize="20sp"
	            android:textColor="@+drawable/buttonColor"
	    		/>
	     <TextView 
	            android:id="@+id/emailText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/userPhoto"
	            android:layout_below="@id/nameText"
	            android:layout_marginLeft="30dp"
	            android:layout_marginTop="5dp"
	            android:text="@string/defaultemail"
	            android:textColor="#333333"
	            android:textSize="16sp"
	    	   />
	   </RelativeLayout>
       <!-- BASIC INFO -->
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/basicinfo"
            android:textSize="25sp"
            android:textColor="@+drawable/buttonColor"
    	/>
       <!-- AGE -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/age"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/ageText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/age_value"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       <!-- CITY -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/city"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/cityText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/empty"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       <!-- GaduGadu -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/gadugadu"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/ggText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/empty"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
        <!-- Skype -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/skype"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/skypeText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/empty"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       <!-- Phone -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/phone"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/phoneText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/empty"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       <!-- ACCOUNT SETTINGS -->
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/settings"
            android:textSize="25sp"
            android:textColor="@+drawable/buttonColor"
    	/>
       <!-- Account Type -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/accounttype"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/paidupText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/basictype"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       <!-- User Level -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/yourlevel"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/userlevelText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/user_level_value"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       <!-- Mnemoney -->
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="5dp"
           android:orientation="horizontal">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/currentmnemoney"
	            android:textSize="20sp"
	            android:textColor="#000000"
	            android:padding="4dp"
	      />
	      <TextView 
	            android:id="@+id/usermoneyText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/user_money_value"
	            android:textColor="#333333"
	            android:textSize="20sp"
	            android:padding="4dp"
	       />
       </LinearLayout>
       
        <Button 
	        android:id="@+id/unlockFullAccessBtn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/donate"
	        android:layout_marginLeft="50dp"
	        android:layout_marginRight="50dp"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="30dp"
	        android:textColor="#FFFFFF"
	        android:background="@drawable/rounded_button"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:onClick="donateApp"
	         android:textSize="25sp"
	       />
        
  
	</LinearLayout>
</ScrollView>
</LinearLayout>

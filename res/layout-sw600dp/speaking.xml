<?xml version="1.0" encoding="utf-8"?>
	  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	   android:id="@+id/presentationMainScreen"
	   android:paddingTop="80dp"
	   android:paddingBottom="50dp"
	   android:paddingLeft="50dp"
	   android:paddingRight="50dp"
	   android:background="#00FFFFFF">
	   <!--  HEADER  -->
  	   	<ImageView
	        android:id="@+id/presentationAudioBtn"
	        android:contentDescription="@string/word_speech_recording"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="27dp"
	        android:layout_marginRight="25dp"
	        android:layout_alignParentRight="true"
	        android:background="@+drawable/audio_button" 
       	 />
	     <LinearLayout 
	         android:id="@+id/learning_screen_word_header"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="0dp"
		     android:layout_marginLeft="20dp"
		     android:layout_marginRight="50dp"
		     android:layout_alignParentLeft="true"
		     android:orientation="vertical">
		     <TextView 
		            android:id="@+id/presentationWordEN"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="@+drawable/buttonColor"
		            android:textSize="25sp"
		     />
		     <TextView 
		            android:id="@+id/presentationWordTrans"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="18sp"
		            android:textColor="#6699FF"
		            android:background="#F5F9FA"
		     />
		     <TextView 
		            android:id="@+id/presentationWordPL"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="#333333"
		            android:textSize="20sp"
		     />
     	</LinearLayout>
     	<!-- FOOTER -->
     	<RelativeLayout
	        android:id="@+id/learning_screen_footer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="30dp"
	        android:layout_alignParentBottom="true">
	     	<!--  FOOTER - INPUT CONTROLS -->
		    <RelativeLayout
		       android:id="@+id/learning_screen_inputs_footer"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:layout_centerHorizontal="true">
		           <Button 
			        android:id="@+id/recordVoiceBtn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:height="60dp"  
			        android:background="@+drawable/recording"
			        />
		            <Button 
			        android:id="@+id/recordVoiceOnBtn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"  
			        android:height="60dp"
			        android:background="@+drawable/recording_on"
			        android:visibility="gone"
			        />
			        <ImageButton 
			        android:id="@+id/checkInputBtn"
			        android:contentDescription="@string/button_next"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_marginTop="4dp"
			        android:layout_marginRight="10dp"
			        android:height="60dp"
			        android:background="@+drawable/nextbtn"
			        />
		    </RelativeLayout>
		    <!-- FOOTER ALTERNATIVE - CHECK ANSWER CONTROLS -->
		    <RelativeLayout
		       android:id="@+id/learning_screen_check_answer_footer"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:layout_centerHorizontal="true"> 
		            <ImageView 
			        android:id="@+id/odpytywanieViewAnswer"
			        android:contentDescription="@string/answer_view"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:layout_alignParentLeft="true"
			        android:height="60dp"
			        />
		            <Button 
			        android:id="@+id/answerResultOnBtn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"    
			        android:height="60dp"
			        android:width="60dp"
			        android:background="@+drawable/round_button"
			        android:textColor="#FFFFFF"
			        />
		            <ImageButton 
			        android:id="@+id/nextWordBtn"
			        android:contentDescription="@string/button_next"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_marginTop="4dp"
			        android:layout_marginRight="10dp"
			        android:height="55dp"
			        android:textColor="#FFFFFF"
			        android:paddingTop="15dp"
			        android:paddingBottom="15dp"
			        android:background="@+drawable/nextbtn"
			        />
		    </RelativeLayout>
	    </RelativeLayout>
      <!--  CENTER STRECHED BETWEEN HEADER AND FOOTER -->
      <ImageView
			android:id="@+id/presentationWordImage"
			android:contentDescription="@string/word_image"
			android:src="#FFFFFF" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/learning_screen_word_header"
			android:layout_above="@id/learning_screen_footer"
			android:layout_marginTop="100dp"
			android:layout_marginBottom="100dp"
			android:layout_marginLeft="50dp"
			android:layout_marginRight="50dp"
		/>
</RelativeLayout>
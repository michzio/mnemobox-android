<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	   android:id="@+id/presentationMainScreen"
	   android:background="#00FFFFFF"
	   >
	   <!--  HEADER  -->
	   <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:layout_above="@id/learning_screen_footer">
	         <LinearLayout 
	         android:id="@+id/learning_screen_word_header"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="15dp"
		     android:layout_marginLeft="20dp"
		     android:layout_weight="0.7"
		     android:orientation="vertical">
		     <TextView 
		            android:id="@+id/presentationWordEN"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="@+drawable/buttonColor"
		            android:textSize="25sp"
		     />
		     <TextView 
		            android:id="@+id/presentationWordTrans"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="14sp"
		            android:textColor="#6699FF"
		            android:background="#F5F9FA"
		     />
		     <TextView 
		            android:id="@+id/presentationWordPL"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="#333333"
		            android:textSize="20sp"
		     />
     	</LinearLayout>
     	<ImageView
	        android:id="@+id/presentationAudioBtn"
	        android:contentDescription="@string/word_speech_recording"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="27dp"
	        android:layout_marginRight="20dp"
	        android:background="@+drawable/audio_button" 
       	 />
	     <!-- IMAGE -->
	     <ImageView
			android:id="@+id/presentationWordImage"
			android:contentDescription="@string/word_image"
			android:src="#FFFFFF" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="30dp"
		/>
	   </LinearLayout>
       <!-- FOOTER -->
     	<LinearLayout 
     	    android:orientation="horizontal"
     	    android:id="@+id/learning_screen_footer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="5dp"
	        android:layout_alignParentBottom="true">
              <ImageButton 
		        android:id="@+id/badBtn"
		        android:contentDescription="@string/bad_answer_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:src="@+drawable/bad"
		        android:background="@null"
		        />
	           <ImageButton 
		        android:id="@+id/normalBtn"
		        android:contentDescription="@string/neutral_answer_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:src="@+drawable/normal"
		        android:background="@null"
		        />
               <ImageButton 
		        android:id="@+id/goodBtn"
		        android:contentDescription="@string/good_answer_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:src="@+drawable/good"
		        android:background="@null"
		        />
       </LinearLayout>
</RelativeLayout>
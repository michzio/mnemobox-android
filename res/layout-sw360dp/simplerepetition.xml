<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:id="@+id/presentationMainScreen"
   android:background="#00FFFFFF">
     <!-- DEPRECATED -->
     <ImageView
		android:id="@+id/presentationWordImage"
		android:contentDescription="@string/word_image"
		android:src="#FFFFFF" 
		android:layout_width="240dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="130dp"
		android:layout_marginLeft="30dp"
		android:maxWidth="240dp"
		android:maxHeight="200dp"
		android:adjustViewBounds="true"
		android:visibility="gone"
	 />
     <!-- END DEPRECATED -->
     
     <!-- FOOTER -->
     <RelativeLayout
	   	android:id="@+id/learning_screen_footer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginBottom="50dp"
	    android:layout_marginTop="30dp"
	    android:layout_alignParentBottom="true">
		  <!--  FOOTER - INPUT CONTROLS -->
		  <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:id="@+id/odpytywanieTextInputScreen"> 
	         <EditText 
		        android:id="@+id/odpytywanieEditText"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_toLeftOf="@id/checkInputBtn"
		        android:layout_marginLeft="15dp"
		        android:background="@drawable/edit_text_border"
		        android:height="60dp"
		        />
	       	 <ImageButton 
		        android:id="@+id/checkInputBtn"
		        android:contentDescription="@string/button_next"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="5dp"
		        android:background="@null"
		        android:src="@drawable/nextbtn"
		        />
	    </RelativeLayout>
    	<!-- FOOTER ALTERNATIVE - CHECK ANSWER CONTROLS -->
	    <RelativeLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:id="@+id/odpytywanieCheckAnswerScreen"> 
             <ImageView 
		        android:id="@+id/odpytywanieViewAnswer"
		        android:contentDescription="@string/answer_correctness_indicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:height="60dp"
		        />
	         <ImageButton 
		        android:id="@+id/nextWordBtn"
		        android:contentDescription="@string/button_next"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="5dp"
		        android:background="@null"
		        android:src="@drawable/nextbtn"
		       />
       </RelativeLayout>
   	</RelativeLayout>
   	<RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/flashcard_layout"
       android:layout_above="@id/learning_screen_footer">
	   <ImageView
	        android:id="@+id/flashcard"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerVertical="true"
	        android:padding="10dp"
	        android:layout_marginLeft="10dp"
	        android:src="@+drawable/post_it_white"
	        />
	   <LinearLayout
	       android:id="@+id/flashcard_word_info"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_centerInParent="true"
	       android:paddingLeft="45dp"
	       android:paddingRight="75dp"
	       android:orientation="vertical" >
        
		   <TextView 
		            android:id="@+id/presentationWordEN"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="@+drawable/buttonColor"
		            android:textSize="28sp"
		            android:gravity="center"
		    />
	       <TextView 
		            android:id="@+id/presentationWordTrans"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="20sp"
		            android:textColor="#6699FF"
		            android:layout_marginTop="10dp"
		            android:gravity="center"
	       />
		   <TextView 
		            android:id="@+id/presentationWordPL"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="#333333"
		            android:textSize="25sp"
		            android:gravity="center"
		            android:layout_marginTop="20dp"
		    />
     	</LinearLayout>
     	<View 
           android:id="@+id/audio_button_anchor"
           android:layout_above="@id/flashcard_word_info"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_centerHorizontal="true"
           />
     	<ImageView
	   		android:id="@+id/presentationAudioBtn"
	   		android:contentDescription="@string/word_speech_recording"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/audio_button_anchor"
	        android:layout_above="@id/flashcard_word_info"
	        android:layout_marginLeft="70dp"
	        android:layout_marginBottom="30dp"
	        android:src="@+drawable/audio_button"
	        />
	</RelativeLayout>
</RelativeLayout>